<view class="page"><view class="search-block"><view class="search-block-ico"><image class="search-ico" src="../../static/search/search.png"></image></view><input class="search-text" type="text" placeholder="搜索电影" maxlength="10" data-event-opts="{{[['input',[['searchMovie',['$event']]]]]}}" value="{{searchValue}}" bindinput="__e"/></view><view class="search-list page-block"><block wx:for="{{searchList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['goDetail',['$0'],[[['searchList','',index,'id']]]]]]]}}" class="search-list-item" bindtap="__e"><view class="list-item-img"><image class="item-img" src="{{item.img}}"></image></view><view class="list-item-info"><view class="item-info-title">{{''+item.nm+''}}</view><view class="item-info-detail"><view hidden="{{!(item.enm==undefined||item.enm==''?false:true)}}" class="item-info-title-english">{{''+item.enm+''}}</view><view class="item-info-type">{{''+item.cat+''}}</view><view class="item-info-time">{{''+item.pubDesc+''}}</view></view></view><block wx:if="{{item.sc>0?true:false}}"><view class="item-info-score"><view>{{item.sc+"分"}}</view></view></block><block wx:else><view><view>暂无评分</view></view></block></view></block><view data-event-opts="{{[['tap',[['searchAll']]]]}}" hidden="{{!(allmovies>0?true:false)}}" class="search-all" bindtap="__e">{{'查看全部'+allmovies+'部影视剧'}}</view></view></view>